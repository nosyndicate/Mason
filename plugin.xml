<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="edu.gmu.cs.mason.category.wizards"
            name="MASON">
      </category>
      <wizard
            canFinishEarly="false"
            category="edu.gmu.cs.mason.category.wizards"
            class="edu.gmu.cs.mason.wizards.project.ui.MasonProjectWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            hasPages="true"
            icon="icons/sample.gif"
            id="edu.gmu.cs.mason.wizard.project"
            name="Mason Project"
            project="true">
      </wizard>
      <wizard
            canFinishEarly="false"
            category="edu.gmu.cs.mason.category.wizards"
            class="edu.gmu.cs.mason.wizard.agent.AgentWizard"
            icon="icons/sample.gif"
            id="edu.gmu.cs.mason.wizard.agent"
            name="Mason Agent">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut
               id="edu.gmu.cs.mason.wizard.project">
         </newWizardShortcut>
         <newWizardShortcut
               id="edu.gmu.cs.mason.wizard.agent">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <newWizardShortcut
               id="edu.gmu.cs.mason.wizard.project">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <newWizardShortcut
               id="edu.gmu.cs.mason.wizard.project">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.source.menu?after=edu.gmu.cs.mason.menu.source.separator">
         <command
               commandId="edu.gmu.cs.mason.command.AddInspector"
               label="Add Inspector"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <test
                     property="Mason.test2">
               </test>
            </visibleWhen>
         </command>
         <command
               commandId="edu.gmu.cs.mason.command.AddGrid"
               label="Add Grid"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.source.menu?after=additions">
         <separator
               name="edu.gmu.cs.mason.menu.source.separator"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="edu.gmu.cs.mason.command.category"
            defaultHandler="edu.gmu.cs.mason.handlers.InspectorAdditionHandler"
            id="edu.gmu.cs.mason.command.AddInspector"
            name="Add Inspector">
      </command>
      <category
            description="Defines bunch of command used by Mason Eclipse Plugins"
            id="edu.gmu.cs.mason.command.category"
            name="Mason Operation">
      </category>
      <command
            categoryId="edu.gmu.cs.mason.command.category"
            defaultHandler="edu.gmu.cs.mason.handlers.GridAdditionHandler"
            id="edu.gmu.cs.mason.command.AddGrid"
            name="Add Grid">
      </command>
   </extension>
   <extension
         id="masonnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="edu.gmu.cs.mason.nature.MasonProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="mason.PropertyTester1"
            id="Mason.propertyTester1"
            namespace="Mason.propertyTester1"
            properties="Mason.propertyTester1"
            type="mason.PropertyTester1">
      </propertyTester>
   </extension>

</plugin>
